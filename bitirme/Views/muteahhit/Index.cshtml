        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.webadresi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.issayisi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hesap.mail)
