@using bitirme.Entity;
@model Tuple<IEnumerable<bitirme.Entity.usta>, IEnumerable<bitirme.Entity.taseron>, IEnumerable<bitirme.Entity.ilan>>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="hero-wrap" style="background-image: url('/theme/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="overlay-2"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-lg-8 col-md-6 ftco-animate d-flex align-items-end">
                <div class="text text-center w-100">
                    <h1 class="mb-4">Hemen İlanlara Gözat<br>Kolayca Teklif Yap</h1>
                    <p><a href="@Url.Action("Ilan", "Home")" class="btn btn-primary py-3 px-4">İlanlara Bak</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="mouse">
        <a href="#" class="mouse-icon">
            <div class="mouse-wheel"><span class="ion-ios-arrow-round-down"></span></div>
        </a>
    </div>
</div>


<section class="ftco-section goto-here">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Yüzlerce İlan</span>
                <h2 class="mb-2">Size Özel</h2>
            </div>
        </div>
        <div class="row">

            @{int k = 0;}
            @foreach (var item in Model.Item3)
            {
                if (k < 6)
                {

                    <div class="container col-md-4">
                        <div class="property-wrap ftco-animate">
                            <div class="img d-flex align-items-center justify-content-center" style="background-image: url(@item.foto);">
                                <a href="@Url.Action("IDetay","ilans",new { id=item.ID})" class="icon d-flex align-items-center justify-content-center btn-custom">
                                    <span class="ion-ios-link"></span>
                                </a>
                                <div class="list-agent d-flex align-items-center">
                                    <a href="@Url.Action("MProfil","muteahhit",new { id=item.proje.muteahhit.ID})" class="agent-info d-flex align-items-center">
                                        <div class="img-2 rounded-circle" style="background-image: url(@item.proje.muteahhit.hesap.fotograf);"></div>
                                        <h3 class="mb-0 ml-2">@Html.DisplayFor(modelItem => item.proje.muteahhit.ad)</h3>
                                    </a>
                                </div>
                            </div>
                            <div class="text">
                                <h3 class="mb-0"><a href="@Url.Action("IDetay","ilans",new { id=item.ID})">@Html.DisplayFor(modelItem => item.ad)</a></h3>
                                <span class="location d-inline-block mb-3"><i class="ion-ios-pin mr-2"></i>@Html.DisplayFor(modelItem => item.proje.adres)</span>
                                <ul class="property_list">
                                    <li><span class="flaticon-floor-plan"></span>@item.boyut m2</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    k++;
                }

            }
        </div>
    </div>
</section>
<section class="ftco-section ftco-fullwidth">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Services</span>
                <h2 class="mb-2">Neden Bizi Seçmelisiniz?</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid px-0">
        <div class="row d-md-flex text-wrapper align-items-stretch">
            <div class="one-half mb-md-0 mb-4 img d-flex align-self-stretch" style="background-image: url('/theme/images/about.jpg');"></div>
            <div class="one-half half-text d-flex justify-content-end align-items-center">
                <div class="text-inner pl-md-5">
                    <div class="row d-flex">
                        <div class="col-md-12 d-flex align-self-stretch ftco-animate">
                            <div class="media block-6 services-wrap d-flex">
                                <div class="icon d-flex justify-content-center align-items-center"><span class="flaticon-piggy-bank"></span></div>
                                <div class="media-body pl-4">
                                    <h3>Aracı Yok</h3>
                                    <p>Sosyal İnşaatım servisi iş verenle hizmet vereni bir araya getirirken komisyoncuları aradan kaldırır.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 d-flex align-self-stretch ftco-animate">
                            <div class="media block-6 services-wrap d-flex">
                                <div class="icon d-flex justify-content-center align-items-center"><span class="flaticon-wallet"></span></div>
                                <div class="media-body pl-4">
                                    <h3>Parayla İşimiz Yok</h3>
                                    <p>Sosyal İnşaatım sadece iletişim kurmak için, kart senet ödeme yok.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 d-flex align-self-stretch ftco-animate">
                            <div class="media block-6 services-wrap d-flex">
                                <div class="icon d-flex justify-content-center align-items-center"><span class="flaticon-file"></span></div>
                                <div class="media-body pl-4">
                                    <h3>Kolayca Kullanın</h3>
                                    <p>Kağıt kalem yok, bütün iletişimi hızlı, online ve kolayca halledin.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 d-flex align-self-stretch ftco-animate">
                            <div class="media block-6 services-wrap d-flex">
                                <div class="icon d-flex justify-content-center align-items-center"><span class="flaticon-locked"></span></div>
                                <div class="media-body pl-4">
                                    <h3>Referans Sistemi</h3>
                                    <p>İş yapacağınız kişilerin referanslarına göre karar vermek sizi güvende tutucak.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="ftco-counter ftco-section img" id="section-counter">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.hveren">0</strong>
                        <span>Tecrübeli <br>Hizmet Veren</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.bitilansay">0</strong>
                        <span>İlan <br>Sayısı</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.topilan">0</strong>
                        <span>Bitmiş<br>Proje</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text d-flex align-items-center">
                        <strong class="number" data-number="@ViewBag.mutsay">0</strong>
                        <span>Tane<br>Müteahhit</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-agent">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">Hizmet Verenler</span>
                <h2 class="mb-4">Ustalar/Taşeronlar</h2>
            </div>
        </div>
        <div class="row">
            @{int i = 0;}
            @foreach (var item in Model.Item1)
            {
                if (i < 5)
                {
                    <div class="col-md-3 ftco-animate">
                        <div class="agent">
                            <a href="@Url.Action("UProfil","usta",new { id=item.ID})">
                                <div class="img">
                                    <img src="@item.hesap.fotograf" class="img-fluid" alt="Colorlib Template">
                                </div>
                            </a>
                            <div class="desc">
                                <h3><a href="properties.html">@item.ad @item.soyad</a></h3>
                                <p class="h-info"><span class="ion-ios-filing icon"></span> <span class="details">@item.isSayisi iş</span></p>
                            </div>
                        </div>
                    </div>
                }
                i++;

            }


            @{int j = 0;}
            @foreach (var item in Model.Item2)
            {
                if (item.hesapID != 77)
                {

                    if (j < 5)
                    {
                        <div class="col-md-3 ftco-animate">
                            <div class="agent">
                                <a href="@Url.Action("TProfil","taseron",new { id=item.ID})">
                                    <div class="img">
                                        <img src="/theme/images/team-1.jpg" class="img-fluid" alt="Colorlib Template">
                                    </div>
                                </a>
                                <div class="desc">
                                    <h3><a href="properties.html">@item.ad</a></h3>
                                    <p class="h-info"><span class="ion-ios-filing icon"></span> <span class="details">@item.isSayisi iş</span></p>
                                </div>
                            </div>
                        </div>
                    }
                    j++;
                }
            }

        </div>
    </div>
</section>

